  section#modal.row
    .span12
      .row
        #myModal.modal.hide.fade
          .modal-header
            button(data-dismiss='modal',type='button').close ×
            h3 Registro de participante
          .modal-body
            form.form-horizontal#registryForm
              .fielset
                .control-group
                  label.control-label Nombre
                  .controls
                    input.input-large#registry-name(name="name",type="text",placeholder="Nombre")
                    span.help.hidden Debe introducir su nombre
                .control-group
                  label.control-label Apellido
                  .controls
                    input.input-large#registry-last_name(name="last_name",type="text",placeholder="Apellido")
                    span.help.hidden Debe introduccir su apellido
                .control-group
                  label.control-label Correo
                  .controls
                    input.input-large#registry-email(name="email",type="text",placeholder="Correo")
                    span.help.hidden Debe introducir un correo válido
                .control-group
                  label.control-label Cedula de Identidad
                  .controls
                    input.input-large#registry-cedula(name="cedula",type="text",placeholder="Cedula")
                    span.help.hidden Debe introducir su Cedula de Identidad
                .control-group
                  label.control-label Organización
                  .controls
                    input.input-large(name="organization",type="text",placeholder="Organización")
                .control-group
                  label.control-label Ciudad
                  .controls
                    input.input-large(name="city",type="text",placeholder="Ciudad")
                .control-group
                  label.control-label ¿Qué te animó a participar?
                  .controls
                    input.input-large(name="reference",type="text",placeholder="Nombre o referencia")
                .control-group
                  label.control-label ¿Estudiante UNITEC?
                  .controls
                    input(type="checkbox", name="unitec") Sí
                .control-group.fapi.hide
                  label.control-label ¿Harás entrega de un ensayo para obtener los puntos de FAPI del trimestre Septiembre-Diciembre?
                  .controls
                    input(type="checkbox", name="fapi") Sí
                .control-group
                  label.control-label ¿Estudiante UBA?
                  .controls
                    input(type="checkbox", name="uba") Sí
                .control-group
                  label.control-label Entradas estudiantes
                  .controls
                    .input-prepend.input-append(data-type="stud")
                      input.input-xsmall(name="tickets_stud", type="text", id="tickets_stud ", placeholder="Estudiantes", disabled="disabled", autocomplete="off", value="0 x 250")
                      button.btn(type="button") +
                      button.btn(type="button") -
                .control-group
                  label.control-label Entradas general
                  .controls
                    .input-prepend.input-append(data-type="prof")
                      input.input-xsmall(name="tickets_prof", type="text", id="tickets_prof", placeholder="General", disabled="disabled", autocomplete="off", value="0 x 450")
                      button.btn(type="button") +
                      button.btn(type="button") -
                .control-group
                  label.control-label Monto de total
                  .controls
                    #total-ammount 0 Bs
                .control-group
                  label.control-label Metodo de Pago
                  .controls
                    select.select#registry-type_of_payment(name='type_of_payment')
                      option Seleccionar Tipo de Pago
                      option(value="deposito") Deposito
                      option(value="transferencia") Transferencia
                    span.help.hidden Debe seleccionar un método de pago
                .control-group
                  label.control-label Numero de Transacción
                  .controls
                    input.field-large#registry-payment_number(name='payment_number',type="text",placeholder='Numero de Deposito/Transferencia', autocomplete="off")
                    span.help.hidden Debe colocar un número de depósito o transferencia
                .control-group
                  label.control-label Fecha de Transacción
                  .controls
                    input.input-xxsmall(type="text",id="payment-day-field"  , placeholder='día', value=''     , style="margin-right:10px", autocomplete="off")
                    input.input-xxsmall(type="text",id="payment-month-field", placeholder='mes', value='6'    , style="margin-right:10px", disabled='true', autocomplete="off")
                    input.input-xxsmall(type="text",id="payment-year-field" , placeholder='año', value='2012' , style="margin-right:10px", disabled='true', autocomplete="off")
                    span.help.hidden Debe colocar un día válido
