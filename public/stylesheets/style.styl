body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  padding 0
  margin 0
  overflow-x hidden
  background white url('http://i.imgur.com/Pk1BX.jpg') 50% 0 no-repeat
a
  color: #00B7FF

#carrousel, #menu
  margin 0 auto 0

.floating
  margin-left 60px
  margin-top 330px
  height auto
  .white
    float left
    width 160px
    padding 15px 15px 10px 15px
    font-size 52px
    margin 0
    background white
    color black
    img
      width 160px
  .black
    background rgba(0,0,0,.7)
    font-size 19px
    color white
    float left
    width 320px
    padding 13px 20px 12px 10px
    margin-top 0
  .trans
    float left
    font-size 20px
    color black
    padding 13px 20px 8px 10px
  .black:hover, .trans:hover
    color white
    background rgba(0,0,0,1)

.clearfix:after
  display block
  content "."
  clear both
  visibility hidden
  line-height 0
  height 0
.clearfix
  display inlin-block
  clear both

#menu
  background #f5f5f5
  text-align center
  width 100%
  border-spacing 0
  border-bottom 2px solid #ddd
  td
    border-left  1px solid #fff
    border-right 1px solid #e5e5e5
    width 18%
    padding 10px 3%
    font-size 15px
    font-weight bold
    color #999
    text-shadow 1px 1px 0 white
  td:hover
    color #fff
    text-shadow 1px 1px 0 #333
    background #000
    border-left 1px solid black
    border-right 1px solid black
  td:first-child
    border-left 0
  td:last-child
    border-right 0

#content
  width 100%
  height 600px
  background white
  font-size 16px
  P:first-child
    text-align justify
    width 90%
    margin 0 auto 0
    padding 20px 0
  .blocks
    margin-left 5%
    .block:first-child
      background #f5f5f5
    .block
      float left
      width 37%
      min-width 420px
      padding 0 5%
      h2
        font-size 32px
        margin-bottom 15px
      .temas
        list-style none
        .tema
          margin-left -33px
          text-shadow:1px 1px 1px #555
          font-size 22px
          font-weight bold
      li
        margin-bottom 15px

#foot
  width 100%
  margin-top 50px
  background #ddd
  text-align center
  box-shadow inset 0 50px 70px #f0f0f0
  img
    margin 30px
    height 77px
  .rights
    color #777
    width 100%
    text-shadow 1px 1px 1px white
    padding 10px 0
