@import 'nib'

body
  background-image url('http://i.imgur.com/F0BEa.png')
  background-position center top
  background-repeat repeat-x

section
  padding-top 40px
  padding-bottom 0px
  > .span12 > .row,
  > .span12 > .row-fluid
    padding-top 15px
  > .span12 > h3
    color #bbbbbb
p
  font-size 14px
  line-height 20px

ul.beneficios li
  font-size 14px
  line-height 20px

#header
  padding-top 30px
  .row
    padding-bottom 35px
    img
      margin 0 auto
    ul
      float left
      li
        background-color #000000
        background rgba(0, 0, 0, 0.3) linear-gradient(top, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.3)) no-repeat center center
        display list-item
        float left
        list-style none outside none
        padding 4px 20px 4px 10px
        margin 1px
        h1, h2, h3, h4, h5
          color #efefef
        &:hover
          background rgba(0, 0, 0, 0.5) linear-gradient(top, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.4)) no-repeat center center
          h1, h2, h3, h4
            color #ffffff

/* Navigation bar */
#navigation
  width 100%
  height 40px
  background-color #eeeeee
  background-repeat repeat-x
  background-image linear-gradient(top, #f5f5f5, #eeeeee)
  border 1px solid #e5e5e5
  border-radius 4px
  .nav 
    margin-bottom 0
    > li > a
      color #999999
      font-size 16px
      line-height 20px
      margin 0
      padding 10px 20px 10px 20px
      border-left 1px solid #f5f5f5
      border-right 1px solid #e5e5e5
      border-radius 0
    > .active > a,
    > .active > a:hover
      color #777777
      background-color #e9e9e9
      border-right-color #ddd
      border-left 0
      box-shadow inset 0 3px 5px rgba(0,0,0,.05)
    > .active > a .caret,
    > .active > a:hover .caret 
      border-top-color #777777
    > li:first-child > a,
    > li:first-child > a:hover 
      border-left 0
      border-radius 4px 0 0 4px
    > li:last-child > a 
      border-right 0
    > li:last-child > a,
    > li:last-child > a:hover 
      border-radius 0px 4px 4px 0px
  .nav-tabs .open .dropdown-toggle,
  .nav-pills .open .dropdown-toggle,
  .nav > li.dropdown.open.active > a,
  .nav > li.dropdown.open.active > a:hover
    background-color #c9c9c9
    border-radius 0px 4px 4px 0px

/* Fixed navigation on scroll */
#navigation.navigation-fixed
  position fixed
  top 0px
  left 0
  right 0
  z-index 1020
  border-color #d5d5d5
  border-width 0 0 1px
  border-radius 0
  box-shadow inset 0 1px 0 #fff, 0 1px 5px rgba(0,0,0,.1)
  .nav
    margin 0 auto
    padding 0 1px
    > li:first-child > a,
    > li:first-child > a:hover,
    > li:last-child > a,
    > li:last-child > a:hover
      border-radius 0

 /* Fix arrow from dropdown menu */
.dropdown .caret
  margin-left 8px


.stack
  float left
  margin 10% 18%
  height 60%
  width 60%
  position relative

.stack, .stack:before, .stack:after
  border 8px solid #ffffff
  box-shadow 2px 2px 8px 0px rgba(0,0,0,0.2)

.stack:before, .stack:after
  content ""
  display block
  height 101%
  width 101%
  position absolute
  z-index -1

.stack:before
  background-color #9F9A70
  top 8px
  left -22px
  transform rotate(-5deg)

.stack:after
  background-color #768590
  top 2px
  left 6px
  transform rotate(5deg)

#lugar .place-intro,
#lugar .place-block
  margin-bottom: 10px
  font-size 14px
  font-weight 300
  line-height 20px

#lugar .place-intro
  padding 0 0 0 15px
  margin 0 0 18px
  border-left 5px solid #dddddd

#lugar .place-block
  padding 0 15px 0 0
  margin 100px 0 18px
  border-left 0px
  border-right 5px solid #dddddd
  text-align right

#lugar .span4 small
  clear both
  color #999999
  display block
  margin 0px auto
  padding-top 6px
  text-align center

.steps, .presentation
  div > .row-fluid > div
    padding-top 25px
  .span3
    span
      color #bbbbbb
      border 5px solid #bbbbbb
      border-radius 40px
      display block
      font-size 24px
      font-weight bold
      height 40px
      line-height 40px
      margin 0px auto
      text-align center
      width 40px
    img
      display block
      margin 0px auto
    p code
      font-size 14px

.numbers
  .span3
    padding-top 12px
    p
      padding-top 8px
    ul li
      list-style none
      padding 3px 0px
  .span12, .span12 h4
    text-align right
  .span12 h4
    padding-bottom 5px

.presentation .row-fluid p
  padding-top 16px

#patrocinadores .row-fluid .span12
  text-align center
  padding-top 10px
  a
    text-align center
  img
    max-height 150px
    max-width 250px

.table
  thead th,
  th, td
    text-align center
    vertical-align middle

footer p
  text-align right
  padding 10px 0px 50px 0px

/* Displays lower than 980px */
@media (max-width: 979px)

  /* Expand title to use horizontal space */
  #header .row .span7
    width 99.999999993%
    *width 99.9468085036383%


  /* Navigation bar, small screens */
  #navigation
    position static
    top auto
    z-index auto
    width auto
    height auto
    background #ffffff
    .nav
      float none
      > li 
        float none
        > a 
          border 0
      > li + li > a 
        border-top 1px solid #e5e5e5
      > li:first-child > a,
      > li:first-child > a:hover
        border-radius 4px 4px 0 0
    .nav:last-child li > a,
    .nav:last-child li > a:hover
      border-radius 0px 0px 4px 4px
    .nav.pull-right .dropdown-menu 
      left 0px
      right auto
    .nav-tabs .open .dropdown-toggle,
    .nav-pills .open .dropdown-toggle,
    .nav > li.dropdown.open.active > a,
    .nav > li.dropdown.open.active > a:hover
      background-color #c9c9c9
      border-radius 0px 0px 4px 4px
  #navigation.navigation-fixed
    position static
    border 1px solid #e5e5e5
    border-radius 4px
    .nav:last-child li > a,
    .nav:last-child li > a:hover
      border-radius 0px 0px 4px 4px

  #lugar .span4.description
    width 65.81196581200001%
    *width 65.7587743226383%
    .place-block
      margin 25px 0 18px

@media (max-width: 767px) 
  .steps
    .span3
      float left
      width: 23.076923077%;
      *width: 23.0237315876383%;
     .span9
      float left
      width: 74.358974359%;
      *width: 74.30578286963829%;
    p
      font-size 14px
      line-height 18px
      code
        font-size 12px

  #lugar .span4.description
    width 99.999999993%
    *width 99.9468085036383%
    .place-block
      margin 20px 0 18px


/* Displays lower than 560px */
@media (max-width: 559px)
  #header
    padding-top 25px
    padding-bottom 25px
    .row
      padding-bottom 25px
      ul
        float left
        li
          padding 3px 16px 3px 8px
          margin 1px
          h1
            font-size 24px
            line-height 36px
          h3
            font-size 14px
            line-height 18px


@media (max-width: 480px)
  #header
    padding-top 25px
    padding-bottom 25px
    .row
      padding-bottom 25px
      ul
        float left
        li
          padding 2px 12px 2px 6px
          margin 1px
          h1
            font-size 18px
            line-height 27px
          h3
            font-size 12px
            line-height 18px


  #lugar .place-intro,
  #lugar .place-block
    font-size 12px
    font-weight 300
    line-height 18px
